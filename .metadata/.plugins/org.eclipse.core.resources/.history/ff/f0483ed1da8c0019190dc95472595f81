<%@ page contentType="text/html; charset=utf-8"%>
<%@ include file="../base.jsp"%>
<html>
<head>
<script type="text/javascript">
function changeStyle(id) {
	var lis = document.getElementsByTagName("li");
	for(var i=0;i<lis.length;i++){
		lis[i].className = "";
	}
   	var obj = document.getElementById(id);
	obj.className = "active";
}
</script>
</head>
<body>
<div style="padding: 10px">
	<ul class="nav nav-pills nav-stacked">
		<li id="li2" onclick="changeStyle('li2')"><a href="home/itemAction_list" target="mainFrame">商品信息</a></li>
		<li id="li3" onclick="changeStyle('li3')"><a href="home/storeAction_list" target="mainFrame">门店信息</a></li>
		<li id="li4" onclick="changeStyle('li4')"><a href="home/staffAction_list" target="mainFrame">员工信息</a></li>
	</ul>
</div>
</body>
