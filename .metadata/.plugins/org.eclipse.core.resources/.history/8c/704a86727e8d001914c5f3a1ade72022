		<form name = "form1" action="VipdataUpdate.jsp">
		请输入第一个数：<input type="text" name="num1" value="<%=strNum1 %>"><br>
		<select name = "operator">
			<option value=+>+</option>
			<option value=->-</option>
			<option value=*>*</option>
			<option value=/>/</option>
			
		</select><br>
